<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addMonumentFragment">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/monumentNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Name: Enter Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/monumentHistoryEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="Enter Monument History"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/bestTimeToVisitEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="Enter Best Time to Visit"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/ticketPriceEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="Enter Ticket Price"
            android:inputType="textPersonName" />
    </LinearLayout>
</FrameLayout>